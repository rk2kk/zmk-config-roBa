    keymap {
        compatible = "zmk,keymap";

        0 { // DEFAULT
            bindings = <
// 1行目: カンマ区切り
&mt LWIN Q, &kp W, &kp E, &kp R, &kp T, &kp Y, &kp U, &kp I, &kp O, &kp P,

// 2行目: カンマ区切り
&mt LCTRL A, &kp S, &kp D, &kp F, &kp G, &mkp MB3, &lt_exit_AML 6 MINUS, &kp H, &kp J, &kp K, &kp L, &lt_exit_AML 5 SEMICOLON,

// 3行目 (旧423行目付近): カンマ区切りを徹底
