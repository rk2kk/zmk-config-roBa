// 4行目 (旧424行目付近): &lt を &lt_exit_AML に修正し、カンマ区切りを徹底
&kp LCTRL, &kp LEFT_WIN, &kp LEFT_ALT, &lt_exit_AML 5 INTERNATIONAL_5, &lt_exit_AML 4 SPACE, &lt_exit_AML 2 INTERNATIONAL_4, &kp BACKSPACE, &lt_exit_AML 1 ENTER, &kp RIGHT_SHIFT
            >;

            sensor-bindings = <&scroll_up_down>;
        };

        1 { // FUNCTION_NUM (変更なし)
            bindings = <
&kp NUMBER_1, &kp NUMBER_2, &kp NUMBER_3, &kp NUMBER_4, &kp N5, &kp NUMBER_6, &kp NUMBER_7, &kp NUMBER_8, &kp NUMBER_9, &kp N0,
&kp MINUS, &kp EQUAL, &kp INT3, &trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans,
&trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans,
&trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans, &trans
            >;
        };

        2 { // NUM (変更なし)
