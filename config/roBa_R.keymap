#include "roBa_L.keymap"
#include "boards/shields/Test/roBa_R.overlay"

&trackball {
    automouse-layer = <MOUSE>;
    scroll-layers = <SCROLL>;

    // snipe-layers = <3>;

    arrows {
        layers = <YAJIRUSHI>;
        bindings =
            <&kp RIGHT_ARROW>,
            <&kp LEFT_ARROW>,
            <&kp UP_ARROW>,
            <&kp DOWN_ARROW>;

        tick = <30>;
        wait-ms = <5>;
        tap-ms = <5>;
    };

    volume {
        layers = <VOLUME>;
        bindings = <&none>, <&none>, <&kp C_VOLUME_UP>, <&kp C_VOLUME_DOWN>;
    };

    alt_tab {
        layers = <ALTTAB>;
        bindings =
        layers = <CTRL_ALT_TAB_TB>;
        bindings =
            <&tab_kt_on_to LEFT_ALT ALT_TAB_TB>,
            <&shift_tab_kt_on_to LEFT_ALT ALT_TAB_TB>,
            <&shift_tab_kt_on_to LCTRL CTRL_TAB_TB>,
            <&tab_kt_on_to LCTRL CTRL_TAB_TB>;


        tick = <80>;
    };

    ctrl_tab {
        layers = <CTRLTAB>;
        bindings = <&kp LC(TAB)>, <&kp LC(LS(TAB))>, <&none>, <&none>;

        tick = <80>;
    };
};
